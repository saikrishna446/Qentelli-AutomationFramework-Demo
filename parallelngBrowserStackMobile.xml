<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Test-method Suite1" parallel="tests" thread-count="10" data-provider-thread-count="10" >
  <listeners>
	  <listener class-name="com.qentelli.automation.listeners.ExecutionListener" />
  </listeners>
    <test name="Test-method iphone" group-by-instances="true">
        <!--Driver type, Make sure to choose one of this (Sauce/Grid/Local)  don't choose whatever you need -->
        <parameter name="driverType" value="sauce" />
        <parameter name="debugMode" value="false" />
        <!-- App Related Properties -->
        <parameter name="locale" value="en_US" />
        <parameter name="overrideLocale" value="false" />
        <parameter name="tunnel" value="no" />
        <parameter name="tunnel_id" value="sc-proxy-tunnel" />
        <parameter name="environment" value="UAT" />
        <parameter name="testId" value="111" />
        <parameter name="user" value="user1" />
        <parameter name="database" value="STABILITY" />

        <!-- Browser Related Properties -->
        <!-- Should be one of the browser (chrome/safari/firefox/iexplorer/edge-->
        <parameter name="browser" value="chrome" />
        <parameter name="browserVersion" value="latest" />
        <parameter name="browserPlatform" value="Windows" />
        <parameter name="osversion" value="11" />


        <!-- Mobile Related Properties -->
        <parameter name="isMobile" value="true"/>
        <parameter name="mobileDeviceName" value="iPhone 13" />
        <parameter name="mobileDeviceOrientation" value="portrait" />
        <parameter name="mobilePlatformVersion" value="15.0" />
        <parameter name="mobilePlatformName" value="MAC" />
<!--        <parameter name="mobileBrowser" value="chrome" />-->

        <!-- Test case to run -->
        <classes>
            <class name="com.qentelli.automation.runners.DefaultRunner3"/>
        </classes>
    </test>
    <test name="Test-method android" group-by-instances="true">
        <!--Driver type, Make sure to choose one of this (Sauce/Grid/Local)  don't choose whatever you need -->
        <parameter name="driverType" value="sauce" />
        <parameter name="debugMode" value="false" />
        <!-- App Related Properties -->
        <parameter name="locale" value="en_US" />
        <parameter name="overrideLocale" value="false" />
        <parameter name="tunnel" value="no" />
        <parameter name="tunnel_id" value="sc-proxy-tunnel" />
        <parameter name="environment" value="UAT" />
        <parameter name="testId" value="111" />
        <parameter name="user" value="user1" />
        <parameter name="database" value="STABILITY" />


        <!-- Browser Related Properties -->
        <!-- Should be one of the browser (chrome/safari/firefox/iexplorer/edge-->
        <parameter name="browser" value="safari" />
        <parameter name="browserVersion" value="latest" />
        <parameter name="browserPlatform" value="OS X" />
        <parameter name="osversion" value="Monterey" />

        <!-- Mobile Related Properties -->
        <parameter name="isMobile" value="true"/>
        <parameter name="mobileDeviceName" value="Samsung Galaxy S20" />
        <parameter name="mobileDeviceOrientation" value="portrait" />
        <parameter name="mobilePlatformVersion" value="10.0" />
<!--        <parameter name="mobileBrowser" value="chrome" />-->

        <!-- Test case to run -->
        <classes>
            <class name="com.qentelli.automation.runners.DefaultRunner3"/>
        </classes>
    </test>

</suite>
